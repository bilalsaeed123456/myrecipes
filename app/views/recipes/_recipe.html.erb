<% obj.each do |recipe| %>
    <div class="row">
        <div class="col-md-2">
            <section class="chef_info center">

            </section>
        </div>
        <div class="col-md-8">
            <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
            <p><%= truncate(recipe.description, length: 150) %></p>
            <% if recipe.ingredients.any? %>
                <p>Ingredients: <%= render recipe.ingredients %></p>
            <% end %>
            <p>
                <span class="quiet"><small><%= time_ago_in_words(recipe.created_at) %> ago by <%= recipe.chef.chefname.capitalize %></small></span>
            </p>
        </div>
    </div>

<% end %>
